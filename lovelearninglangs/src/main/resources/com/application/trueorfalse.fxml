<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<!--This is our Basic question implemenation for true or false-->

<VBox alignment="CENTER" prefHeight="378.0" prefWidth="316.0" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.TrueFalseController">
    <children>
    <ImageView fitHeight="58.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/LLL_Logo.png" />
         </image>
      </ImageView>
        <Label text="True or False">
         <font>
            <Font size="24.0" />
         </font></Label>
      <Line endX="100.0" startX="-100.0" strokeWidth="2.0" />
        <Label fx:id="questionLabel" />
        <Button fx:id="trueButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="76.0" text="True" />
        <Button fx:id="falseButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="76.0" text="False" />
        <Label text="Progress:">
         <font>
            <Font size="24.0" />
         </font></Label>
        <Label fx:id="progressLabel" />
        <Label fx:id="scoreLabel" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
