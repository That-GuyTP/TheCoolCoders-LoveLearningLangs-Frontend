<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--
This is the login page of the app.
It's where the user will input their information (username and password) before clicking the submit button
Currently it's set to #switchToLogin
-->

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.LanguageSelector">
    <children>
      <ImageView fitHeight="58.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/LLL_Logo.png" />
         </image>
      </ImageView>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Congrats! You've made it to the home page. This is as far as we need to go for now." />
        <Button fx:id="langaugeButton" onAction="#selectLanguage" text="Spanish" />
        <Button fx:id="languageButton" onAction="#selectLanguage" text="German" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
