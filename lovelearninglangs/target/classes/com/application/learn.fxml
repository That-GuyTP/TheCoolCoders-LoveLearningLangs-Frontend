<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="412.0" prefWidth="222.0" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.LearnController">
   <children>

   <!-- Added by Aashish Jayapuram-->
        <HBox alignment="TOP_LEFT" >
          <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" prefHeight="33.0" prefWidth="38.0" style="-fx-background-color: white;">
            <graphic>
                <ImageView fitHeight="34.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@images/back_image.png" />
                  </image>
                </ImageView>
            </graphic>
          </Button>
        </HBox>

      <ImageView fitHeight="58.0" fitWidth="79.0" onMouseClicked="#back" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/LLL_Logo.png" />
         </image>
      </ImageView>
      <Text fx:id="learnText" strokeType="OUTSIDE" strokeWidth="0.0" text="Click the next button to load a practice word!" />
      <Button mnemonicParsing="false" onAction="#playSound" text="Play Sound" />
      <Button mnemonicParsing="false" onAction="#generateNewText" text="Next" />
      <!-- <Button mnemonicParsing="false" onAction="#back" text="BACK" /> -->
   </children>
</VBox>
