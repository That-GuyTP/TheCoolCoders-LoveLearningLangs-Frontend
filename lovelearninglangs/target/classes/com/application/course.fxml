<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<!--
this is the course fxml of the app.
It handles the following features
 * Selecting a course level
 * Switching to Learn
-->

<VBox alignment="CENTER" prefHeight="412.0" prefWidth="222.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.CourseController">
    <children>
      <Button mnemonicParsing="false" onAction="#switchToHome" text="Icon (Return to Language Select)" />
      <Button mnemonicParsing="false" onAction="#switchToLearn" text="Learn" />
      <Circle fill="#ff1f1f" radius="33.0" stroke="#ff3c00" strokeType="INSIDE" style="-fx-translate-x: -50;" text="Level 1"/>
        <Button fx:id="exitButton" onAction="#switchToLevel1" text="Level 1" />
      <Button fx:id="exitButton1" onAction="#switchToLevel2" text="Level 2" />
      <Button fx:id="exitButton11" onAction="#switchToLevel3" text="Level 3" />
        <Button fx:id="exitButton" onAction="#exitApp" text="Exit App" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
