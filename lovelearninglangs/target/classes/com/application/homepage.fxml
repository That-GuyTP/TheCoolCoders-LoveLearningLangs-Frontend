<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.Homepage">
    <children>
      <ImageView fitHeight="58.0" fitWidth="79.0" onMouseClicked="#switchToHome" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/LLL_Logo.png" />
         </image>
      </ImageView>
        <Button fx:id="profileButton" onAction="#switchToProfile" text="Profile" />
        <Button fx:id="courseButton" onAction="#switchToCourse" text="Course" />
        <Button fx:id="exitButton" onAction="#exitApp" text="Exit App" />
        <Button fx:id="showCurrentUser" onAction="#displayUserInfo" text="Show Current User" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
